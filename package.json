{
  "name": "agentic-ai-chat",
  "version": "1.0.0",
  "description": "A responsive chat application powered by the Gemini API, featuring an agentic AI persona.",
  "keywords": [
    "react",
    "gemini",
    "ai",
    "chat",
    "agentic",
    "math"
  ],
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "esbuild backend/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:playwright",
    "start": "node dist/server.js",
    "dev": "node dev.js",
    "deploy": "npm run build:client && wrangler pages deploy dist",
    "lint": "eslint ."
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "latest",
    "@google/genai": "latest",
    "@tailwindcss/postcss": "latest",
    "@vitejs/plugin-react": "latest",
    "ai": "latest",
    "autoprefixer": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "framer-motion": "latest",
    "html2canvas": "latest",
    "jszip": "latest",
    "playwright": "latest",
    "postcss": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-katex": "latest",
    "react-markdown": "latest",
    "react-syntax-highlighter": "latest",
    "react-virtuoso": "latest",
    "rehype-katex": "latest",
    "rehype-raw": "latest",
    "remark-gfm": "latest",
    "remark-math": "latest",
    "tailwindcss": "latest",
    "typescript": "latest",
    "vite": "latest",
    "wrangler": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "esbuild": "latest",
    "vite": "latest",
    "typescript": "latest",
    "tailwindcss": "latest",
    "@tailwindcss/cli": "latest",
    "@vitejs/plugin-react": "latest",

    "eslint": "latest",
    "nodemon": "latest",
    "ts-node": "latest",
    "postcss": "latest",
    "autoprefixer": "latest",

    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/express": "latest",
    "@types/cors": "latest",
    "@types/react-syntax-highlighter": "latest",

    "babel-plugin-react-compiler": "latest",
    "eslint-plugin-react-compiler": "latest"
  }
}
